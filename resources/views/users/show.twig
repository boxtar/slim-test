{% extends "layouts/app.twig" %}

{% block content %}
<div class="container mx-auto">

    <div class="mt-4 p-4 bg-white shadow rounded">
        <p class="flex items-center text-xl text-gray-700">
            {{ user.name | title }}
            <span class="ml-2 text-sm text-gray-500">({{ user.username }})</span>
        </p>
        <p class="text-sm text-gray-500">{{ user.email }}</p>
    </div>
</div>
{% endblock content %}